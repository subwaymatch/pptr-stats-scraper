generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sport {
  id        String    @id
  name      String
  url       String
  createdAt DateTime  @default(now())
  athletes  Athlete[]
}

model School {
  id               String          @id
  name             String
  divisionLocation String?
  conference       String?
  nickname         String?
  colors           String?
  bgColor          String?
  ncaaUrl          String
  url              String?
  websitePlatform  WebsitePlatform @default(UNCHECKED)
  twitterUrl       String?
  facebookUrl      String?
  iconUrl          String
  createdAt        DateTime        @default(now())
  athletes         Athlete[]
}

enum WebsitePlatform {
  SIDEARM_SPORTS
  PRESTO
  UNKNOWN
  UNCHECKED
}

model Athlete {
  id           String  @id
  sport        Sport   @relation(fields: [sportId], references: [id])
  school       School  @relation(fields: [schoolId], references: [id])
  schoolId     String
  sportId      String
  name         String
  class        String?
  hometown     String?
  highSchool   String?
  bioText      String?
  rosterUrl    String?
  twitterUrl   String?
  instagramUrl String?
  opendorseUrl String?
}
